<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product_material_attributes.product_template_only_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <page name="sales" position="inside">
                <group attrs="{'invisible': ['|', ('sale_ok', '=', False), ('recurring_invoice', '=', False)]}">
                    <group string="Subscription Pricelist" name="partner_pricelist">
                        <field colspan="2" name="pricelist_id" />
                    </group>
                </group>
            </page>

        </field>
    </record>
</odoo>
