<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_order_form" model="ir.ui.view">
    <field name="name">sale_order_project_key.view_order_form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form" />
    <field name="arch" type="xml">

      <field name="project_id" position="attributes">
        <attribute name="attrs">{'invisible': False}</attribute>
      </field>

      <field name="sale_order_template_id" position="before">
        <field name="project_id" position="move" />
      </field>

      <xpath expr="//field[@name='name']" position="attributes">
        <attribute name="readonly">0</attribute>
        <attribute name="attrs">{'readonly': [('project_id', '=', False)]}</attribute>
      </xpath>

    </field>
  </record>

  <record id="view_quotation_tree" model="ir.ui.view">
    <field name="name">sale_order_project_key.view_quotation_tree</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_quotation_tree"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="after">
            <field name="project_id" optional="show" />
        </xpath>
    </field>
  </record>

</odoo>
