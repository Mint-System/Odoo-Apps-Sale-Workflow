<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale_partner_shipping_group.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="partner_invoice_id" position="after">
                <field name="partner_shipping_id" groups="account.group_shipping_address" context="{'default_type':'delivery'}" options='{"always_reload": True}'/>
            </field>
        </field>
    </record>

</odoo>
